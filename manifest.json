{
  "manifest_version": 3,
  "name": "My Extension",
  "version": "1.0",
  "description": "An example extension",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "src/styles.css"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
